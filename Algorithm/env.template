# LangScope Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================

# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017/langscope

# Database name (optional, default: langscope)
LANGSCOPE_DB_NAME=langscope

# =============================================================================
# Supabase Authentication (Stateless JWT)
# =============================================================================

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (public, safe for frontend)
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (secret, backend only)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase JWT Secret (for local JWT verification - found in Dashboard > Settings > API)
# If not provided, tokens will be verified via Supabase API
SUPABASE_JWT_SECRET=your-jwt-secret-here

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google / Gemini
GOOGLE_API_KEY=your-google-api-key

# Groq
GROQ_API_KEY=your-groq-api-key

# Mistral
MISTRAL_API_KEY=your-mistral-api-key

# Cohere
COHERE_API_KEY=your-cohere-api-key

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key

# HuggingFace
HUGGINGFACE_API_KEY=your-huggingface-api-key

# XAI (Grok)
XAI_API_KEY=your-xai-api-key

# Together AI
TOGETHER_API_KEY=your-together-api-key

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key

# =============================================================================
# Azure OpenAI (if using)
# =============================================================================

# AZURE_API_KEY=your-azure-api-key
# AZURE_API_BASE=https://your-resource.openai.azure.com/
# AZURE_API_VERSION=2024-02-15-preview

# =============================================================================
# Configuration Overrides (Optional)
# =============================================================================

# TrueSkill parameters
# TRUESKILL_MU_0=1500
# TRUESKILL_SIGMA_0=166

# Match configuration
# PLAYERS_PER_MATCH=6
# MAX_MATCHES_PER_MODEL=50

# Logging
LOG_LEVEL=INFO

